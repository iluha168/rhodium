{
	"compilerOptions": {
		"lib": ["ES2020", "DOM"],
		"target": "esnext",

		"outDir": "dist",

		"module": "commonjs",
		"strict": true,
		"declaration": true,
		"emitDeclarationOnly": true,
		"esModuleInterop": true,
		"allowImportingTsExtensions": true,
		"allowArbitraryExtensions": false,
		"allowJs": false
	},
	"include": [
		"./src"
	]
}
